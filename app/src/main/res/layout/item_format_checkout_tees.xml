        <TextView
            android:id="@+id/size1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="	#228B22"
            android:textSize="25sp"
            android:hint="Size 1:"/>

        <TextView
            android:id="@+id/size2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="	#228B22"
            android:textSize="25sp"
            android:hint="Size 2:"/>

        <TextView
            android:id="@+id/size3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="	#228B22"
