        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="	#228B22"
            android:textSize="25sp"
            android:hint="Name:"/>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="ID:"-->
            <!--android:textSize="25sp"-->
